<div class="main-sidebar sidebar-style-2">
    <aside id="sidebar-wrapper">
        <div class="sidebar-brand">
            <a href=""></a>
        </div>
        <div class="sidebar-brand sidebar-brand-sm">
            <a href=""></a>
        </div>
        <ul class="sidebar-menu">
            <li class="menu-header">Ecommerce</li>

            <li id="manage-categories" class="dropdown">
                <a href="#" class="nav-link has-dropdown" data-toggle="dropdown">
                    <i class="fas fa-list"></i>
                    <span>Manage Categories</span>
                </a>
                <ul class="dropdown-menu">
                    <li id="size">
                        <a class="nav-link" asp-controller="ASize" asp-action="Index">Size</a>
                    </li>
                    <li id="category">
                        <a class="nav-link" href="">Category</a>
                    </li>
                    <li id="topping">
                        <a class="nav-link" href="">Topping</a>
                    </li>
                </ul>
            </li>

            <li id="products" class="dropdown">
                <a asp-action="Index" asp-controller="AProduct" class="nav-link">
                    <i class="fas fa-box"></i>
                    <span>Products</span>
                </a>
            </li>

            <li id="orders" class="dropdown">
                <a href="#" class="nav-link has-dropdown" data-toggle="dropdown">
                    <i class="fas fa-cart-plus"></i>
                    <span>Orders</span>
                </a>
                <ul class="dropdown-menu">
                    <li id="all-orders">
                        <a class="nav-link" asp-action="GetAllOrder" asp-controller="AdminDashboard">All Orders</a>
                    </li>
                    <li id="pending-orders">
                        <a class="nav-link" asp-action="GetAllOrderPending" asp-controller="AdminDashboard">All Pending Orders</a>
                    </li>
                    <li id="delivered-orders">
                        <a class="nav-link" asp-action="GetAllOrderDeli" asp-controller="AdminDashboard">All Delivered Orders</a>
                    </li>
                    <li id="canceled-orders">
                        <a class="nav-link" asp-action="GetAllOrderCancel" asp-controller="AdminDashboard">All Canceled Orders</a>
                    </li>
                </ul>
            </li>
        </ul>
    </aside>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        const menuItems = document.querySelectorAll('.sidebar-menu li');

        menuItems.forEach(item => {
            item.addEventListener('click', function () {
                menuItems.forEach(i => i.classList.remove('active'));
                this.classList.add('active');
            });
        });
    });
</script>