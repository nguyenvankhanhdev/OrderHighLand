@model List<OrderHighLand.Models.OrderDetails>

<div class="container mt-5 mb-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <h2 class="text-center mb-4">Chi tiết đơn đặt hàng</h2>
            <div class="table-responsive">
                <table class="table table-hover table-bordered text-center shadow-lg rounded" style="background-color: #f8f9fa;">
                    <thead class="thead-light">
                        <tr>
                            <th>Order Detail ID</th>
                            <th>Product Image</th>
                            <th>Product Name</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Toppings</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detail in Model)
                        {
                            <tr>
                                <td class="align-middle">@detail.Id</td>
                                <td class="align-middle">
                                    <img src="~/imgs/@detail.ProductImage" alt="@detail.ProductName" style="max-width: 80px; height: auto; border-radius: 8px; object-fit: cover;" />
                                </td>
                                <td class="align-middle">@detail.ProductName</td>
                                <td class="align-middle">@detail.Quantity</td>
                                <td class="align-middle">@detail.Price.ToString("C", new System.Globalization.CultureInfo("vi-VN"))</td>
                                <td class="align-middle">@string.Join(", ", detail.Toppings)</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
