@model OrderHighLand.Models.Category
@{
	Layout = "_AdminLayout";
}
<section class="section">
	<div class="section-header">
		<h1>Size</h1>
	</div>
	<div class="section-body">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4>Create Size</h4>
					</div>
					<div class="card-body">
						<form id="SizeForm" asp-action="Create" method="post" class="form">
							<div class="form-group">
								<label>Price</label>
								<input type="text" class="form-control" asp-for =@Model.Name>
							</div>
							<button type="submit" class="btn btn-primary">Create</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>