@{
	Layout = "_AdminLayout";
}
<section class="section">
	<div class="section-header">
		<h1>Size</h1>
	</div>
	<div class="section-body">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4>Create Size</h4>
					</div>
					<div class="card-body">
						<form id="SizeForm" class="form">
							<div class="form-group">
								<label>Price</label>
								<input type="number" class="form-control" name="Price">
							</div>
							<div class="form-group">
								<label>Size</label>
								<input type="text" class="form-control" name="Size">
							</div>
							<button type="submit" class="btn btn-primary">Create</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</section>

@section Scripts {
	<script>
		$(document).ready(function () {
			$('#SizeForm').on('submit', function (e) {
				e.preventDefault();
				var formData = new FormData(this); 
				console.log(formData);
				$.ajax({
					url: '@Url.Action("Create", "ASize")',
					type: 'POST',
					data: formData, 
					processData: false, 
					contentType: false, 
					success: function (response) {
						Swal.fire(
							'Success!',
							'Size created successfully!',
							'success'
						).then(function () {
							window.location.href = '@Url.Action("Index", "ASize")';
						});
					},
					error: function (xhr, status, error) {
						Swal.fire(
							'Error!',
							'There was an error creating the variant.',
							'error'
						);
					}
				});
			});
		});

	</script>
}
