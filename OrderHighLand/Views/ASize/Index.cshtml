@model IEnumerable<OrderHighLand.Models.Sizes>
@{
	Layout = "_AdminLayout";
}
<section class="section">
	<div class="section-header">
		<h1>Size </h1>
	</div>
	<div class="section-body">
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h4>ProductsVar</h4>
						<div class="card-header-action">
							<a asp-controller="ASize" asp-action="Create" class="btn btn-primary">
								<i class="fas fa-plus"></i> Create New
							</a>
						</div>
					</div>
					<div class="card-body">
						<table class="table table-bordered table-hover">
							<thead>
								<tr>
									<th>ID</th>
									<th>Price</th>
									<th>Size</th>
									<th>Action</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.Id</td>
										<td>@item.Price</td>
										<td>
											@item.Size
										</td>
										<td>
											<a href="@Url.Action("Edit", "ASize", new { id = item.Id })" class="btn btn-primary"> <i class="far fa-edit"></i></a>
											<a href="@Url.Action("Delete", "ASize", new { id = item.Id })" class="btn btn-danger delete-item"> <i class="far fa-trash-alt"></i></a>
										</td>
									</tr>
								}
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div>
	</div>
</section>









