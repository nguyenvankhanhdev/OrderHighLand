@{
    Layout = "_AdminLayout";
}
<table id="sizeTable" class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Price</th> <!-- Removed the extra ">" -->
            <th>Actions</th> <!-- Added a column for actions (Edit/Delete) -->
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>

<script>
    $(document).ready(function () {
        $('#sizeTable').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
                "url": "@Url.Action("GetSizes", "ASize")", // Link to get sizes data
                "type": "POST"
            },
            "columns": [
                { "data": "S_ID" },
                { "data": "S_SIZE" },
                { "data": "S_PRICE" },
                {
                    "data": null, // The data is not directly mapped to any column
                    "render": function (data, type, row) {
                        return '<a href="/ASize/Edit/' + data.S_ID + '">Edit</a> | <a href="/ASize/Delete/' + data.S_ID + '" onclick="return confirm(\'Are you sure you want to delete this?\')">Delete</a>';
                    },
                    "orderable": false // Disable sorting for this column
                }
            ]
        });
    });
</script>
